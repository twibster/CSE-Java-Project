<!-- Change the controller package and name -->
<AnchorPane prefHeight="510.0" prefWidth="612.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="frontend.controllers.create_assignment">
